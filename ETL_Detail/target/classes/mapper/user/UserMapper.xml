<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ule.com.etl.dao.UserDao">
	
	<select id="getPwd" parameterType="ule.com.etl.model.User" resultType="String">
		select pwd from ULEAPP_ITEM_SYNCSRH.ulebi_user where username=#{username} and flag=0
	</select>

	<!-- 查询所有用户信息-->
	<select id="getAllUser" resultType="ule.com.etl.model.User">
		SELECT * FROM ULEAPP_ITEM_SYNCSRH.ULEBI_USER
	</select>

    <!-- 根据ID  查询用户信息 -->
    <select id="getUserById"  resultType="ule.com.etl.model.User">
        SELECT * FROM ULEAPP_ITEM_SYNCSRH.ULEBI_USER WHERE ID = #{id}
    </select>
    <!-- 获取最大用户信息ID -->
    <select id="getMaxId" resultType="java.lang.Integer">
        SELECT MAX(id) FROM ULEAPP_ITEM_SYNCSRH.ULEBI_USER
    </select>

    <!-- 插入用户信息 -->
    <insert id="insertUser" >
        INSERT INTO ULEAPP_ITEM_SYNCSRH.ULEBI_USER (ID,USERNAME,PWD,EMAIL,PHONE,FLAG)
        VALUES (#{id},#{username},#{pwd},#{email},#{phone},#{flag})
    </insert>

	<!-- 更新用户信息 -->
	<update id="updateUser">
		UPDATE ULEAPP_ITEM_SYNCSRH.ULEBI_USER
		SET  USERNAME = #{username} ,
		      PWD = #{pwd} ,
		      EMAIL = #{email} ,
		      PHONE = #{phone} ,
		      FLAG = #{flag}
		WHERE ID = #{id}
	</update>

    <!-- 删除用户信息 -->
    <delete id="deleteUser">
        DELETE FROM ULEAPP_ITEM_SYNCSRH.ULEBI_USER WHERE ID = #{id}
    </delete>

	<!-- 根据用户名称  查询用户信息 -->
	<select id="getUserByName"  resultType="ule.com.etl.model.User">
		SELECT * FROM ULEAPP_ITEM_SYNCSRH.ULEBI_USER WHERE USERNAME = #{username}
	</select>
	
</mapper>
	